doctype html
html
  head
    title Add a new book
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  body
    div.container.mt-3
      h1 Add a New Book
      form(action="/books", method="POST")
        div.mb-3
          label(for="name") Book Name
          input.form-control(type="text", name="name", id="name", required)
        div.mb-3
          label(for="author") Author
          input.form-control(type="text", name="author", id="author", required)
        div.mb-3
          label(for="year") Published Year
          input.form-control(type="number", name="year", id="year", required)
        button.btn.btn-secondary(type="submit") Add Book
