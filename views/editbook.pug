doctype html
html
    head
        title Edit Book
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    body
        div.container.mt-3
            h1 Edit Book
            form(action=`/books/${book.id}?_method=PUT`, method='POST')
                div.mb-3
                    label(for='name') Name
                    input#name.form-control(type='text', name='name', value=book.name)
                div.mb-3
                    label(for='author') Author
                    input#author.form-control(type='text', name='author', value=book.author)
                div.mb-3
                    label(for='year') Year
                    input#year.form-control(type='number', name='year', value=book.year)
                button.btn.btn-secondary(type='submit') Update Book
